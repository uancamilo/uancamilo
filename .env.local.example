# Contentful Configuration
# Copy this file to .env.local and add your actual Contentful credentials

CONTENTFUL_SPACE_ID=your_contentful_space_id_here
CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token_here

# Optional: For preview mode
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_preview_token_here

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# Google Services
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_google_verification_code
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Gmail SMTP (para formulario de contacto)
# Genera una App Password en: https://myaccount.google.com/apppasswords
GMAIL_USER=tu_email@gmail.com
GMAIL_APP_PASSWORD=xxxx_xxxx_xxxx_xxxx